<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/cart_qty_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        tools:text="1X"
        android:textSize="@dimen/label_large_size"
        android:textColor="@color/colorAccent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:layout_toEndOf="@+id/cart_qty_TV"
        android:layout_toStartOf="@+id/cart_item_price_TV"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_item_title_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="@dimen/label_large_size"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/cart_item_prep_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_small_size"
            tools:text="Preparation"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cart_item_price_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/default_padding"
        android:textSize="@dimen/label_small_size"
        android:textColor="@color/colorPrimaryDark"
        tools:text="R10.00"/>
</RelativeLayout>